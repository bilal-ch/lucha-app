<div class="devise">
  <div class="content">
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-text"><%= render "layouts/language"   %></li>
    </ul>
    <h1><%= I18n.t "client_sign_up.welcome"%>
      <br />
      <small>
      <%= I18n.t "client_sign_up.please_fill_in"%>
      </small>
    </h1>

    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal", role: "form"}) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= I18n.t "client_sign_up.first_name" %>
        <span class="text-danger"></span>
        <br>
        <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <span class="text-danger"> * </span>
        <br>
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :home_phone %>
        <br>
        <%=f.text_field :home_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :cell_phone %>
        <br>
        <%=f.text_field :cell_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <br>
        <%= f.text_field :address, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <br>
        <%= f.text_field :city, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :state %>
        <br>
        <%= f.select(:state, options_for_select(us_states, "IL"), {}, {:class => "form-control"} ) %>
      </div>

      <div class="form-group">
        <%= f.label :ward %>
        <br>
        <%= f.text_field :ward, :class => "form-control" %>
        <a href="https://webapps1.cityofchicago.org/ezbuy/geoWardLookup.do" target='_blank'><i>Search for your ward</i></a>
      </div>

      <div class="form-group">
        <%= f.label :zip_code %>
        <br>
        <%= f.text_field :zip_code, :class => "form-control" %>
      </div>

      <hr>

      <div class="form-group">
        <div class="checkbox-inline" %>
          <%= f.label :authorization_and_waiver do %>
            <%= f.check_box :authorization_and_waiver %>
            *I authorize LUCHA and it's staff to use my information for the purposes of counseling. 
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="checkbox-inline">
          <%= f.label :privacy_policy_authorization do %>
            <%= f.check_box :privacy_policy_authorization%>
            *I have read LUCHA's Privacy and Disclosure policy and agree to the terms and conditions set.  
          <% end %>
        </div>
      </div>

      <hr>

      <h1>
        <small>
          The following information will be your login information, make sure to keep this safe with you.
        </small>
      </h1>   

      <div class="form-group">
        <%= f.label :email %><span class="text-danger"> * </span><br />
        <%= f.email_field :email, :class => "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password %><span class="text-danger"> * </span><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      </div>
    <% end %>

    <hr>

    <h5>Already have an account? <%= render "devise/shared/links" %></h5>

  </div>
</div>
