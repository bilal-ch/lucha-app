<h1>Foreclosure Clients</h1>

<div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="What you looking for?">
</div>
<span class="counter pull-right"></span>
<table class="table table-hover table-bordered results">
 <thead>
   <tr>
     <th>ID</th>
     <th class="col-md-5 col-xs-5">Name</th>
     <th class="col-md-5 col-xs-5">Home Phone</th>
     <th class="col-md-5 col-xs-5">Address</th>
     <th class="col-md-5 col-xs-5">View</th>
   </tr>
 </thead>
<% @foreclosures.each do |foreclosure| %>
 <tbody>
   <tr>
     <td><%= foreclosure.client.id %></td>
     <td>
       <%= link_to(foreclosure.client.full_name.titleize, client_path(foreclosure.client.id)) %>
      
     </td>
     <td><%= foreclosure.client.home_phone %></td>
     <td><%= foreclosure.client.address %>, <%= foreclosure.client.city %></td>
     <td>
       <%= link_to "View", foreclosure_path(foreclosure.id), class: "btn btn-default" %>
     </td>
   </tr>
 </tbody>
<% end %>
</table>




<p>
  Download:
  <%= link_to "CSV", foreclosures_path(format: "csv") %> |
  <%= link_to "Excel", foreclosures_path(format: "xls") %>
  </div>
</p>

