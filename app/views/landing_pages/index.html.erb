                            <a href="#services"><%= I18n.t "splash.services" %></a>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li>
                            <a href="#contact"><%= I18n.t "splash.contact" %></a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small"><%= I18n.t "splash.copy_right" %></p>
                </div>
            </div>
        </div>
