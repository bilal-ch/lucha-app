	<a  name="contact"></a>
    <div class="banner">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h2><%= I18n.t "splash.connect" %></h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href="https://twitter.com/lucha_chicago" target="_blank" class="btn btn-default btn-lg"><span class="network-name">Twitter</span></a>
                        </li>
                        <li>
                            <a href="https://www.linkedin.com/company/latin-united-community-housing-association" target="_blank" class="btn btn-default btn-lg"><span class="network-name">Linkedin</a>
