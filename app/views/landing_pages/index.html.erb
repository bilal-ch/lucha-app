<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= I18n.t ".splash.sub_title" %></title>

    <!-- Bootstrap Core CSS -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <!-- Custom Fonts -->


    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

</head>

<body>

    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                  <%= render "layouts/alerts" %>
                    <div class="intro-message">
                        <h1><%= I18n.t ".splash.title" %></h1>
                        <h3><%= I18n.t ".splash.sub_title" %></h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                          <% if current_client %>
                              <li><a href="/clients/<%= current_client.id %>/status" class="btn btn-default btn-lg"><span class="network-name">View my profile</span></a></li>
                              <li><a href="/clients/sign_out" data-method="delete" class="btn btn-default btn-lg"><span class="network-name">Sign Out</span></a></li>
                          <% elsif current_user %>
                              <li><a href="/users" class="btn btn-default btn-lg"><span class="network-name">View your clients</span></a></li>
                              <li><a href="/users/sign_out" data-method="delete"  class="btn btn-default btn-lg"><span class="network-name">Sign out</span></a></li>
                          <% else %>
                              <li><a href="/register" class="btn btn-default btn-lg"> <span class="network-name"><%= I18n.t ".splash.sign_up" %></span></a></li>
                              <li><a href="/login" class="btn btn-default btn-lg"><span class="network-name"><%= I18n.t ".splash.sign_in" %></span></a></li>
                          <% end %>
                        </ul>
                        <ul class="list-inline intro-social-buttons">
                            Language:
                            <li><%= link_to_unless_current "English", locale: "en" %></li>
                            <li><%=  link_to_unless_current "EspaÃ±ol", locale: "es" %></li><br>
                            <% if client_signed_in? %>
                            <% else %>
                              <li><a href="/users/sign_in"><%= I18n.t "splash.user_sign_in" %></a></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->
	<a  name="services"></a>
    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><%= I18n.t ".splash.mission" %>
                    <p class="lead"><%= I18n.t ".splash.mission_statement" %> </p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag "luchahistory.jpg", :class => "img-responsive" %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><%= I18n.t "splash.lucha_vision" %></h2>
                    <p class="lead"><%=  I18n.t "splash.lucha_vision_lead" %>
                    </p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <%= image_tag "washington.jpg", :class => "img-responsive" %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->
    <a  name="services"></a>
    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading"><%= I18n.t ".splash.demographics" %>
                    <p class="lead"><%= I18n.t ".splash.demographics_statement" %> </p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag "housing.jpg", :class => "img-responsive" %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>

        <!-- /.container -->

